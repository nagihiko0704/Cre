<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cre" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_mint_0</item>
        <item name="colorPrimaryVariant">@color/main_mint_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_mint_1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeCre" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="editTextStyle">@style/CustomEditTextViewStyle</item>
        <item name="textInputStyle">@style/CustomTextInputLayoutStyle</item>
        <item name="statusBarBackground">@color/transparent</item>

    </style>

    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/godo_m</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/godo_b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_black_0</item>
    </style>

    <style name="CustomEditTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/godo_m</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="fontFamily">@font/godo_m</item>
    </style>
</resources>