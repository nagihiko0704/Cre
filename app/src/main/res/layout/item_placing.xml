<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="18dp">

    <TextView
        android:id="@+id/textView_item_placing_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="A 현장"
        android:textColor="@color/main_mint_1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/divider_card_0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_item_placing_field"
        />

    <TextView
        android:id="@+id/textView_item_placing_info_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 - 35 - 210 70㎥"
        android:textColor="@color/main_black_1"
        android:textSize="16sp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_card_0"/>

    <TextView
        android:id="@+id/textView_item_placing_info_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 - 24 - 180 100㎥"
        android:textColor="@color/main_black_1"
        android:textSize="16sp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_item_placing_info_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>