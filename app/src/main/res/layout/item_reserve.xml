<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:padding="4dp"
    android:background="@color/dark_mint_0">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_item_reserve_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="70dp"
            android:gravity="center"
            android:text="2021.03.23 (월)"
            android:textColor="@color/main_black_0"
            android:textAlignment="center"
            android:textSize="22sp"
            android:background="@color/main_mint_0"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp">

        </TextView>

        <TextView
            android:id="@+id/textView_item_reserve_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="25 - 30 - 150 60㎥"
            android:textColor="@color/main_black_1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@color/bg_white_0"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp">

        </TextView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView_item_reserve_state"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="확정"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_white_0"
        android:layout_marginLeft="2dp">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>